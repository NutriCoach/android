<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/slide_recipes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Como funciona?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_margin="12dp"
        android:id="@+id/slide_recipes_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona los ingredientes que tienes en tu cocina y nosotros hacemos el resto. Te daremos una gran lista de delciosas recetas con los ingredientes que elegiste. Asi de facil!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/slide_recipes_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>